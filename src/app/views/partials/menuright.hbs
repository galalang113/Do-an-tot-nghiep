<!-- product right -->
<div class="col-lg-3 col-md-12 mt-lg-0 mt-4 p-lg-0">
    <div class="side-bar p-sm-4 p-3">
        <div class="search-hotel border-bottom py-2">
            <h3 class="agileits-sear-head mb-3">Tìm kiếm</h3>
            <form action="#" method="get" id="search-mutiple">
                <input type="search" placeholder="Tên sản phẩm..." name="search">
            </form>
        </div>
        <!-- price -->
        <div class="range border-bottom py-2">
            <h3 class="agileits-sear-head mb-3">Chọn mức giá</h3>
            <div class="w3l-range">
                <ul class="left-side-list" id="range-between">
                    <li >
                        <a data-min="0" data-max="2" href="#">Dưới 2 triệu</a>
                    </li>
                    <li >
                        <a data-min="2" data-max="4" href="#">Từ 2 - 4 triệu</a>
                    </li>
                    <li >
                        <a data-min="4" data-max="7" href="#">Từ 4 - 7 triệu</a>
                    </li>
                    <li >
                        <a data-min="7" data-max="13" href="#">Từ 7 - 13 triệu</a>
                    </li>
                    <li >
                        <a data-min="13" data-max="20" href="#">Từ 13 - 20 triệu</a>
                    </li>
                    <li>
                        <a data-min="20" data-max="999" href="#">Trên 20 triệu</a>
                    </li>
                </ul>
            </div>
        </div>
        <!-- //price -->
        <!-- discounts -->
        <div class="left-side border-bottom py-2">
            <h3 class="agileits-sear-head mb-3">Chọn hãng</h3>
            <ul class="left-side-list" id="select-manufacturer">
                {{{manufacturerView categories}}}
                
            </ul>
        </div>
        <!-- //discounts -->
        <!-- best seller -->
        <div class="f-grid py-2 d-none d-lg-block">
            <h3 class="agileits-sear-head mb-3">Sản Phẩm Bán Chạy</h3>
            <div class="box-scroll">
                <div class="scroll">
                    {{{renderProductBestSeller productsSeller}}}
                </div>
            </div>
        </div>
        <!-- //best seller -->
    </div>
    <!-- //product right -->
</div>