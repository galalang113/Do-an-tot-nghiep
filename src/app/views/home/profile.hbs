                        <div class="form-gp">
                            <label class="input-label">Địa chỉ</label>
                            <textarea name="address" placeholder="Nhập địa chỉ" rows="5"></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Cập nhật</button>
                    </form>
                </div>
                <div class="tab-pane">
                    <h2>Thay đổi mật khẩu</h2>
                    <form action="#" method="post">
                        <div class="form-gp">
                            <label class="input-label">Mật khẩu cũ</label>
                            <input type="text" name="oldPassword" class="form-control" id="oldPassword" placeholder="Nhập mật khẩu cũ">
                        </div>
