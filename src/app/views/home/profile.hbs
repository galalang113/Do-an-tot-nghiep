
<!-- page -->
<div class="services-breadcrumb">
    <div class="agile_inner_breadcrumb">
        <div class="container">
            <ul class="w3_short">
                <li>
                    <a href="/">Home</a>
                    <i>|</i>
                </li>
                <li>Thông tin tài khoản</li>
            </ul>
        </div>
    </div>
</div>
<!-- //page -->
<div class="container mt-4" >
    <div class="row">
        <div class="col-md-3 bg-cus-user">
            <div class="user-info">
                <img src="/public/images/customer/avatar.png" alt="Avatar customer">
                <div class="info-customer">
                    Tài khoản của
                    <strong>{{account.fullname}}</strong>
                </div>
            </div>
            <ul class="tabs nav flex-column">
                <li class="tab-item active">
                    <i class="tab-icon fas fa-user"></i>
                    Thông tin tài khoản
                </li>
                <li class="tab-item">
                    <i class="tab-icon fas fa-book"></i>
                    Quản lý đơn hàng
                </li>
                <li class="tab-item">
                    <i class="tab-icon fas fa-map-marker-alt"></i>
                    Sổ địa chỉ
                </li>
                <li class="tab-item">
                    <i class="tab-icon far fa-address-book"></i>
                    Tạo Sổ địa chỉ
                </li>
                <li class="tab-item">
                    <i class="tab-icon fas fa-cogs"></i>
                    Thay đổi mật khẩu
                </li>
            </ul>
        </div>
        <div class="col-md-9">
            <div class="tab-content">
                <div class="tab-pane active">
                    <h2>Thông tin tài khoản</h2>
                    <form>
                        <div class="form-gp">
                            <label for="fulName" class="input-label">Họ và tên</label>
                            <input type="text" class="form-control" id="fulName" placeholder="Nhập họ tên..." value="{{account.fullname}}">
                        </div>
                        <div class="form-gp">
                            <label for="phoneNumber" class="input-label">Số điện thoại</label>
                            <input type="text" class="form-control" id="phoneNumber" placeholder="Nhập số điện thoại..." value="{{account.phone}}">
                        </div>
                        <div class="form-gp">
                            <label for="email" class="input-label">Email</label>
                            <input type="text" class="form-control" id="email" placeholder="Nhập email..." value="{{account.email}}" readonly>
                        </div>
                        <div class="form-gp">
                            <label class="input-label">Giới tính</label>
                            {{{genderChecked account.gender}}}
                        </div>
                        <div class="form-gp">
                            <label for="date" class="input-label">Ngày sinh</label>
                            <input type="date" class="form-control" id="date">
                        </div>
                        <button type="submit" class="btn btn-primary">Cập nhật</button>
                    </form>
                </div>
                <div class="tab-pane">
                    <h2>Đơn hàng của tôi</h2>
                    <div class="inner">
                        <table>
                            <thead>
                                <tr>
                                    <th>Mã đơn hàng</th>
                                    <th>Ngày mua</th>
                                    <th>Sản phẩm</th>
                                    <th>Tổng tiền</th>
                                    <th>Trạng thái đơn hàng</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each account.oders}}
                                    <tr>
                                        <td>
                                            <a href="#">{{this._id}}</a>
                                        </td>
                                        <td>{{dateToString this.date}}</td>
                                        <td>{{this.productName}}</td>
                                        <td>{{convertToVND this.sum}} VNĐ</td>
                                        <td>{{this.status}}</td>
                                    </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="tab-pane">
                    <h2>Sổ địa chỉ</h2>
                    <div class="inner">
                        {{#each account.address}}
                            <div class="item">
                                <div class="info">
                                    <div class="name">Nguyễn Văn Trọng
                                        <span>
                                            {{#if this.active}}
                                            <svg stroke="currentColor" fill="currentColor" stroke-width="0" viewBox="0 0 512 512" height="1em" width="1em" xmlns="http://www.w3.org/2000/svg">
                                                <path d="M256 8C119.033 8 8 119.033 8 256s111.033 248 248 248 248-111.033 248-248S392.967 8 256 8zm0 48c110.532 0 200 89.451 200 200 0 110.532-89.451 200-200 200-110.532 0-200-89.451-200-200 0-110.532 89.451-200 200-200m140.204 130.267l-22.536-22.718c-4.667-4.705-12.265-4.736-16.97-.068L215.346 303.697l-59.792-60.277c-4.667-4.705-12.265-4.736-16.97-.069l-22.719 22.536c-4.705 4.667-4.736 12.265-.068 16.971l90.781 91.516c4.667 4.705 12.265 4.736 16.97.068l172.589-171.204c4.704-4.668 4.734-12.266.067-16.971z"></path>
                                            </svg>
                                            <span>Địa chỉ mặc định</span>
                                            {{/if}}
                                        </span>
                                    </div>
                                    <div class="address">
                                        <span>Địa chỉ: </span>
                                        {{this.filladdress}}</div>
                                        <div class="phone">
                                            <span>Điện thoại: </span>
                                            {{this.phone}}
                                        </div>
                                    </div>
                                    <div class="action">
                                        <a class="edit" href="#">Mặc định</a>
                                        {{#if this.active}}
                                        {{else}}
                                            <button class="detele-address" data-id="{{this._id}}">Xóa</button>
                                        {{/if}}
                                    </div>
                            </div>
                        {{/each}}
                    </div>
                </div>
