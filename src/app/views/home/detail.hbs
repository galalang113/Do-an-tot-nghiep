<!-- page -->
<div class="services-breadcrumb">
    <div class="agile_inner_breadcrumb">
        <div class="container">
            <ul class="w3_short">
                <li>
                    <a href="/">Home</a>
                    <i>|</i>
                </li>
                <li>{{phone.name}}</li>
            </ul>
        </div>
    </div>
</div>
<!-- //page -->

<!-- Single Page -->
<div class="banner-bootom-w3-agileits py-5">
    <div class="container py-xl-4 py-lg-2">
        <!-- //tittle heading -->
        <div class="row">
            <div class="col-lg-5 col-md-8 single-right-left ">
                <div class="grid images_3_of_2">
                    <div class="flexslider">
                        <ul class="slides">
                            {{{productDetailImages phone.colors}}}
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
            <div class="col-lg-7 single-right-left simpleCart_shelfItem">
                <h3 class="mb-3">Điện thoại {{phone.name}}</h3>
                <p class="mb-3">
                    <span class="item_price">{{convertSaleToVND phone.price phone.sale}} <sup>đ</sup></span>
                    <del class="mx-2 font-weight-light">{{convertToVND phone.price}} <sup>đ</sup></del>
                    <label>Miễn phí giao hàng</label>
                </p>
                <div class="product-single-w3l">
                    <p class="my-3">
                        <i class="far fa-hand-point-right mr-2"></i>
                        <label>1 Năm</label> Bảo hành chính hãng
                    </p>
                    <ul>
                        <li class="mb-1">
                            <span class="text-inline-block">Màn hình: </span><span class="font-italic">{{phone.sreen}}</span>
                        </li>
                        <li class="mb-1">
                            <span class="text-inline-block">Hệ điều hành: </span><span class="font-italic">{{phone.HDH}}</span>
                        </li>
                        <li class="mb-1">
                            <span class="text-inline-block">Camera sau: </span><span class="font-italic">{{phone.CameraAfter}}</span>
                        </li>
                        <li class="mb-1">
                            <span class="text-inline-block">Camera trước: </span><span class="font-italic">{{phone.CameraBefore}}</span>
                        </li>
                        <li class="mb-1">
                            <span class="text-inline-block">Chip: </span><span class="font-italic">{{phone.CPU}}</span>
                        </li>
                        <li class="mb-1">
                            <span class="text-inline-block">RAM: </span><span class="font-italic">{{phone.RAM}}</span>
                        </li>
                        <li class="mb-1">
                            <span class="text-inline-block">Bộ nhớ trong: </span><span class="font-italic">{{phone.MemoryIn}}</span>
                        </li>
                        <li class="mb-1">
                            <span class="text-inline-block">SIM: </span><span class="font-italic">{{phone.SIM}}</span>
                        </li>
                        <li class="mb-1">
                            <span class="text-inline-block">Pin, Sạc: </span><span class="font-italic">{{phone.Battery}}</span>
                        </li>
                    </ul>
                </div>
                <div class="product-single-w3l"></div>
                <div class="product-color_img mt-3 mb-3">
                    <div style="display: flex;">
                        <div style="padding-top: 10px;padding-right: 10px;font-weight: bold;">Chọn màu:</div>
                        {{{rennderPhonesColor phone.colors}}}
                    </div>
                </div>
                <div class="occasion-cart">
                    <div class="snipcart-details top_brand_home_details item_add single-item hvr-outline-out">
                        <form action="#" method="post">
                            <fieldset>
                                <input type="hidden" name="cmd" value="_cart" />
                                <input type="hidden" name="inventory" value="{{quantityProduct phone.colors}}"/>
                                <input type="hidden" name="add" value="{{phone.slug}}" />
                                <input type="hidden" name="addColor" value="{{idImageOne phone.colors}}" />
                                <input type="hidden" name="img" value="{{imageOne phone.colors}}" />
                                <input type="hidden" name="business" value="" />
                                <input type="hidden" name="item_name" value="{{phone.name}} - {{nameImageOne phone.colors}}" />
                                <input type="hidden" name="amount" value="{{convertSale phone.price phone.sale}}" />
                                <input type="hidden" name="discount_amount" value="0" />
                                <input type="hidden" name="currency_code" value="VND" />
                                <input type="hidden" name="return" value=" " />
                                <input type="hidden" name="cancel_return" value=" " />
                                <input type="submit" name="submit" value="Thêm vào giỏ" class="button btn" />
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- //Single Page -->
<div class="container">
    <div class="product-sec1 px-sm-4 px-3 py-sm-5  py-3 mb-4">
        <div class="col-lg-12">
            <nav>
                <div class="nav nav-tabs" id="nav-tab" role="tablist">
                    <a class="nav-item nav-link active" id="nav-home-tab" data-toggle="tab" href="#nav-home" role="tab"
                        aria-controls="nav-home" aria-selected="true">Bài viết</a>
                    <a class="nav-item nav-link" id="nav-contact-tab" data-toggle="tab" href="#nav-contact" role="tab"
                        aria-controls="nav-contact" aria-selected="false">Đánh giá</a </div>
            </nav>
            <div class="tab-content" id="nav-tabContent">
                <div class="tab-pane p-3 border-right border-bottom border-left fade show active" id="nav-home"
                    role="tabpanel" aria-labelledby="nav-home-tab">
                    {{{checkContentProduct phone.content}}}
                </div>
                <div class="tab-pane p-3 border-right border-bottom border-left fade" id="nav-contact" role="tabpanel"
                    aria-labelledby="nav-contact-tab">
                    <div id="raiting-view">
                        <span class="heading">Đánh giá: </span>
                        {{{starRaitings raitings}}}
                        <p>{{{avgRaitings raitings}}} trung bình dựa trên {{{lenghtRaitings raitings}}} nhận xét.</p>
                        <hr style="border:1px solid #f1f1f1">

                        <div class="row">
                            <div class="side">
                                <div>5 star</div>
                            </div>
                            <div class="middle">
                                <div class="bar-container">
                                    <div class="bar-5" style="width: {{{percentRaitings raitings 5}}}%;"></div>
                                </div>
                            </div>
                            <div class="side right">
                                <div>{{{percentRaitings raitings 5}}}%</div>
                            </div>
                            <div class="side">
                                <div>4 star</div>
                            </div>
                            <div class="middle">
                                <div class="bar-container">
                                    <div class="bar-4" style="width: {{{percentRaitings raitings 4}}}%;"></div>
                                </div>
                            </div>
                            <div class="side right">
                                <div>{{{percentRaitings raitings 4}}}%</div>
                            </div>
                            <div class="side">
                                <div>3 star</div>
                            </div>
                            <div class="middle">
                                <div class="bar-container">
                                    <div class="bar-3" style="width: {{{percentRaitings raitings 3}}}%;"></div>
                                </div>
                            </div>
                            <div class="side right">
                                <div>{{{percentRaitings raitings 3}}}%</div>
                            </div>
                            <div class="side">
                                <div>2 star</div>
                            </div>
                            <div class="middle">
                                <div class="bar-container">
                                    <div class="bar-2" style="width: {{{percentRaitings raitings 2}}}%;"></div>
                                </div>
                            </div>
                            <div class="side right">
                                <div>{{{percentRaitings raitings 2}}}%</div>
                            </div>
                            <div class="side">
                                <div>1 star</div>
                            </div>
                            <div class="middle">
                                <div class="bar-container">
                                    <div class="bar-1" style="width: {{{percentRaitings raitings 1}}}%;"></div>
                                </div>
                            </div>
                            <div class="side right">
                                <div>{{{percentRaitings raitings 1}}}%</div>
                            </div>
                        </div>
                        <button type="button" class="btn btn-primary m-top-10" id="collapse-raitings">Viết đánh giá</button>
                        <div class="write-content">
                            <div id="noidung-danhgia" class="collapse">
                                <form action="#" method="post" id="form-noidung-danhgia">
                                    <div class="form-raiting">
                                        <div class="title-raiting">
                                            <div>Bạn cảm thấy sản phẩm này như thế nào?</div>
                                            <div>1: Rất tệ, 2: Tệ, 3: Bình thường, 4: Tốt, 5: Rất tốt</div>
                                        </div>
                                        <div class="item-rate">
                                            <div class="star">
                                                <input hidden="true" id="star1" type="radio" name="star" value="1">
                                                <label for="star1">
                                                    <span class="fa fa-star"></span>
                                                </label>
                                            </div>
                                            <div class="star">
                                                <input hidden="true" id="star2" type="radio" name="star" value="2">
                                                <label for="star2">
                                                    <span class="fa fa-star"></span>
                                                </label>
                                            </div>
                                            <div class="star">
                                                <input hidden="true" id="star3" type="radio" name="star" value="3">
                                                <label for="star3">
                                                    <span class="fa fa-star"></span>
                                                </label>
                                            </div>
                                            <div class="star">
                                                <input hidden="true" id="star4" type="radio" name="star" value="4">
                                                <label for="star4">
                                                    <span class="fa fa-star"></span>
                                                </label>
                                            </div>
                                            <div class="star">
                                                <input hidden="true" id="star5" type="radio" name="star" value="5">
                                                <label for="star5">
                                                    <span class="fa fa-star"></span>
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                    <div>
                                        <input type="text" name="proSlug" hidden="true" >
                                        <input type="text" name="userSlug" hidden="true" >
                                    </div>
                                    <div class="textarea">
                                        <textarea name="content"
                                            placeholder="Mời bạn chia sẻ thêm một số cảm nhận ..."></textarea>
                                        <div class="textarea-bottom">
                                            <label for="content-images">
                                                <span>
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                                                        fill="currentColor" class="bi bi-camera" viewBox="0 0 16 16">
                                                        <path
                                                            d="M15 12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V6a1 1 0 0 1 1-1h1.172a3 3 0 0 0 2.12-.879l.83-.828A1 1 0 0 1 6.827 3h2.344a1 1 0 0 1 .707.293l.828.828A3 3 0 0 0 12.828 5H14a1 1 0 0 1 1 1v6zM2 4a2 2 0 0 0-2 2v6a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V6a2 2 0 0 0-2-2h-1.172a2 2 0 0 1-1.414-.586l-.828-.828A2 2 0 0 0 9.172 2H6.828a2 2 0 0 0-1.414.586l-.828.828A2 2 0 0 1 3.172 4H2z" />
                                                        <path
                                                            d="M8 11a2.5 2.5 0 1 1 0-5 2.5 2.5 0 0 1 0 5zm0 1a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7zM3 6.5a.5.5 0 1 1-1 0 .5.5 0 0 1 1 0z" />
                                                    </svg>
                                                </span>
                                                Chọn file
                                            </label>
                                            <input name="images" id="content-images" type="file" hidden="true"
                                                multiple="true"
                                                accept="image/png, image/jpeg"
                                                >
                                            <div class="gallery"></div>
                                        </div>
                                    </div>
                                    <div class="danhgia-submit justify-content-between">
                                        <div class="text-danger"
                                            style="font-size: 90%;padding-left: 10px;padding-top: 10px;"
                                        ></div>
                                        <button type="submit" class="btn btn-primary m-top-10">Gửi đánh giá</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <hr style="border:1px solid #f1f1f1">
                        <div id="raiting-content">
                            {{{commentProduct raitings}}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="product-sec1 px-sm-4 px-3 py-sm-5  py-3 mb-4">
        <h3 class="heading-tittle text-center font-italic">Sản Phẩm Nổi Bật</h3>
        <div id="phoneTop" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                {{{productTop productsHot}}}
                <a class="carousel-control-prev" href="#phoneTop" role="button" data-slide="prev">
                    <span aria-hidden="true"><i class="fas fa-chevron-left"></i></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#phoneTop" role="button" data-slide="next">
                    <span aria-hidden="true"><i class="fas fa-chevron-right"></i></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
</div>